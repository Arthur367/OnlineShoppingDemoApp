<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buyer.ResetPasswordActivity">

    <RelativeLayout
        android:id="@+id/r5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        >
        <TextView
            android:id="@+id/page_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Password "
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>
   <EditText
       android:id="@+id/find_phone_number"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/r5"
       android:hint="Please write your Phone Number"
       android:background="@drawable/inputs_design"
       android:padding="14dp"
       android:layout_margin="15dp"
       android:textSize="15sp"/>


    <TextView
        android:id="@+id/title_questions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer the following Questions"
        android:gravity="center"
        android:layout_below="@+id/find_phone_number"
        android:textSize="35sp"
        android:layout_marginTop="15dp"
        />
    <EditText
        android:id="@+id/question1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_questions"
        android:hint="Where your parents meet first time"
        android:background="@drawable/inputs_design"
        android:padding="14dp"
        android:layout_margin="15dp"
        android:textSize="15sp"/>
    <EditText
        android:id="@+id/question2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question1"
        android:hint="What's your favorite super hero"
        android:background="@drawable/inputs_design"
        android:padding="14dp"
        android:layout_margin="15dp"
        android:textSize="15sp"/>
    <Button
        android:id="@+id/verify_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question2"
        android:text="Verify"
        android:textStyle="bold"
        android:background="@drawable/buttons"
        android:padding="14dp"
        android:layout_margin="15dp"
        android:textSize="21sp"/>

</RelativeLayout>